<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobven.mmbkittester">

    <application
        android:name=".MMBKitApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".appsecurity.tamperprotection.ValidateAppIntegrityActivity"
            android:label="Validate App Integrity"/>
        <activity android:name=".menu.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".appsecurity.snapshot.SnapshotSettingActivity"
            android:label="Prevent Snapshot" />
        <activity
            android:name=".appsecurity.snapshot.SnapshotTestActivity"
            android:label="Prevent Snapshot" />
        <activity
            android:name=".appsecurity.root.RootDetectionActivity"
            android:label="Root Detection" />
        <activity
            android:name=".appsecurity.securetext.SecureTextActivity"
            android:label="Disable Copy/Paste" />
        <activity
            android:name=".appsecurity.screenrecord.ScreenRecordSettingActivity"
            android:label="Prevent Screen Record" />
        <activity
            android:name=".appsecurity.screenrecord.ScreenRecordTestActivity"
            android:label="Prevent Screen Record" />
    </application>

</manifest>